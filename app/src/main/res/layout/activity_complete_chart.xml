    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#7BA5C9"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/book_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complete_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oneprettynight"
        android:textSize="25sp"
        android:text="내가 읽은 책"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_complete_list"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/edit_text_customize"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_book"
        app:layout_constraintBottom_toTopOf="@+id/chart"
        app:layout_constraintVertical_bias="0.1"/>

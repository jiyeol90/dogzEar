<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/page_listitem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chapter_listitem"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="25p"
        android:textSize="10sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/chapter_listitem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/page_listitem"
        app:layout_constraintRight_toLeftOf="@id/date_listitem"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:text="예브게니아의 검은백조"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/date_listitem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chapter_listitem"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:text="20/09/15"
        android:textSize="10sp"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>
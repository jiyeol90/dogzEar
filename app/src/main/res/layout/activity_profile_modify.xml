    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="아이디"
        android:gravity="center"
        android:maxWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:id="@+id/user_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toBottomOf="@+id/user_id"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_user_pwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="비밀번호"
        android:gravity="center"
        android:maxWidth="100dp"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_user_id"
        app:layout_constraintHorizontal_bias="0.18"/>

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 문구"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/user_pwd"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_user_Text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="입력하세요"
        android:gravity="center"
        android:maxWidth="200dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_user_pwd"
        app:layout_constraintHorizontal_bias="0.18"/>

    <Button
    android:id="@+id/profile_modify_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_blue"
    android:fontFamily="@font/oneprettynight"
    android:text="변경"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_marginRight="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_user_Text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.8"
    app:layout_constraintVertical_bias="0.2"/>




</androidx.constraintlayout.widget.ConstraintLayout>